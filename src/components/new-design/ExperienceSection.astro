---
// Experience timeline section
const experiences = [
  {
    title: 'Senior Frontend Engineer',
    company: 'Vercel (Clone)',
    period: '2021 — Presente',
    description: 'Liderando el equipo de infraestructura core. Mejoré los tiempos de build en un 40% e implementé un nuevo sistema de diseño en más de 15 microservicios.',
    current: true
  },
  {
    title: 'Software Developer',
    company: 'Stripe (Clone)',
    period: '2019 — 2021',
    description: 'Contribuí al dashboard de pagos. Construí componentes reutilizables en React y optimicé consultas de base de datos para transacciones de alto volumen.',
    current: false
  },
  {
    title: 'Junior Web Designer',
    company: 'Agency',
    period: '2017 — 2019',
    description: 'Colaboré con diseñadores para traducir mockups de Figma en plantillas HTML/CSS responsivas.',
    current: false
  },
];
---

<section id="about" class="py-24 border-t border-white/5">
  <div class="max-w-3xl mx-auto px-6">
    <h2 class="text-2xl font-medium text-white tracking-tight mb-12">Experiencia</h2>
    
    <div class="relative space-y-12">
      <div class="absolute left-3 top-2 bottom-2 w-px bg-white/10"></div>

      {experiences.map((exp) => (
        <div class="relative pl-12">
          <div class={`absolute left-[9px] top-2 w-1.5 h-1.5 rounded-full border border-neutral-950 shadow-[0_0_0_4px_#0a0a0a] ${exp.current ? 'bg-white' : 'bg-neutral-600'}`}></div>
          <div class="flex flex-col sm:flex-row sm:items-baseline justify-between mb-2">
            <h3 class={`font-medium ${exp.current ? 'text-white' : 'text-neutral-200'}`}>{exp.title}</h3>
            <span class="text-xs text-neutral-500 font-mono">{exp.period}</span>
          </div>
          <p class="text-sm text-neutral-400 mb-2">{exp.company}</p>
          <p class="text-sm text-neutral-500 leading-relaxed">
            {exp.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
