---
// Technologies stack section
const technologies = [
  { name: 'React', icon: 'lucide:code-2' },
  { name: 'TypeScript', icon: 'lucide:file-code' },
  { name: 'Laravel', icon: 'lucide:layout-template' },
  { name: 'Tailwind', icon: 'lucide:wind' },
  { name: 'PostgreSQL', icon: 'lucide:database' },
  { name: 'Figma', icon: 'lucide:figma' },
];
---

<section id="stack" class="py-24 border-t border-white/5 relative">
  <div class="max-w-6xl mx-auto px-6">
    <p class="text-sm font-medium text-neutral-500 mb-8 uppercase tracking-widest">Tecnolog√≠as</p>
    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-x-8 gap-y-12 opacity-80">
      {technologies.map((tech) => (
        <div class="flex items-center gap-3 group">
          <div class="p-2 rounded-lg bg-neutral-900 border border-white/5 group-hover:border-white/10 transition-colors">
            <span class="iconify text-white" data-icon={tech.icon} data-width="20"></span>
          </div>
          <span class="text-sm font-medium text-neutral-300 group-hover:text-white transition-colors">{tech.name}</span>
        </div>
      ))}
    </div>
  </div>
</section>
